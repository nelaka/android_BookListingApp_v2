<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/padding">
    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="@dimen/book_width"
        android:layout_height="@dimen/book_height"
        android:scaleType="fitXY"
        android:src="@drawable/no_cover_thumb"
        android:contentDescription="@string/desc_book_thumbnail" />

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/padding"
    android:paddingEnd="@dimen/padding"
    android:paddingBottom="@dimen/default_padding_small">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/title_label"
        android:textAllCaps="true"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="subtitle"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/authors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="authors"
        android:textStyle="italic" />
</LinearLayout>
</LinearLayout>